{
  "compilerOptions": {
    "jsx": "react-native",
    "target": "ES2020",
    "module": "CommonJS",
    "baseUrl": "./src",
    "paths": {
      "*": ["types/*"]
    },
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
